@inherits LayoutComponentBase

<div class="page">
    <!-- Sidebar Navigation (NavMenu) -->
    <div class="sidebar">
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="">Rattle.Client</a>
                <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>

        <div class="@NavCssClass nav-scrollable" @onclick="ToggleNav">
            <nav class="nav flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="counter">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="weather">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="auction">
                        <span class="bi bi-gavel-fill" aria-hidden="true"></span> Live Auction
                    </NavLink>
                </div>
            </nav>
        </div>
    </div>

    <!-- Main Content Area -->
    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool _isNavCollapsed = true;

    private string? NavCssClass => _isNavCollapsed ? "collapse" : null;

    private void ToggleNav()
    {
        _isNavCollapsed = !_isNavCollapsed;
    }
}
